<%#
<h1>Comments#new</h1>
<p>Find me in app/views/comments/new.html.erb</p>
<p>Find me in app/views/topics/new.html.erb</p>
%>

<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @comment do |f| %>
        
        <%= f.hidden_field :topic_id, :value => params[:topic_id] %>
        
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
